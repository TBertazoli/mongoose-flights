<%-include ("../partials/header.ejs") %>
<body>
  <div class="main">
    <table id="list">
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight<br />#</th>
          <th>Departure</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(flight => { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
          <td><a href="/flights/<%= flight._id %>">View</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
