<%- include('../partials/header') %>
<body>
  <div class="main">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <table id="list">
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight #</th>
          <th>Departure</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(flight => { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departure %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
