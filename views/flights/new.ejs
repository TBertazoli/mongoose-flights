<%-include("../partials/header.ejs") %>

<form action="/flights" method="POST">
  <label>Airline</label>
  <select name="airline">
    <option value="American">American</option>
    <option value="Delta">Delta</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
    <option value="Azul">Azul</option>
    <option value="JetBlue">Jet Blue</option>
    <option value="Spirit">Spirit</option>
    <option value="Alaska">Alaska</option>
    <option value="Hawaiian">Hawaiian</option>
  </select>
  <label>Airport</label>
  <select name="airport">
    <option value="IAH">Houston (IAH)</option>
    <option value="AUS">Austin (AUS)</option>
    <option value="DFW">Dallas (DFW)</option>
    <option value="DEN">Denver (DEN)</option>
    <option value="LAX">Los Angeles (LAX)</option>
    <option value="SAN">San Diego (SAN)</option>
    <option value="VCP">Viracopos (VCP)</option>
    <option value="FLL">Fort Lauderdale (FLL)</option>
    <option value="MIA">Miami (MIA)</option>
  </select>
  <label>Flight Number</label>
  <input type="text" name="flightNo" />
  <button type="submit">Submit</button>
</form>
